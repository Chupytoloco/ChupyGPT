<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChupyGPT.MainPage">
	<VerticalStackLayout Spacing="10" Padding="30">
		<!-- Área de entrada de texto -->
		<Entry x:Name="inputText"
               Placeholder="Introduce tu texto aquí"
			   Completed="OnEntryCompleted"
               HeightRequest="50"
               VerticalOptions="Start" />

		<!-- Área para mostrar la respuesta -->
		<ScrollView VerticalOptions="FillAndExpand">
			<Label x:Name="responseLabel"
                   Text="La respuesta aparecerá aquí..."
                   VerticalOptions="StartAndExpand"
                   HorizontalOptions="FillAndExpand" />
		</ScrollView>
	</VerticalStackLayout>
</ContentPage>
